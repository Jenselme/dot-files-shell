# -*- mode: sh -*-

[DEFAULT]
git_gc = git gc "$@"

[$HOME/.config/vcsh/repo.d/emacs.git]
checkout =
    vcsh clone ssh://git@jujens.eu/home/git/emacs.git
    vcsh emacs git remote add github git@github.com:Jenselme/dot-files-emacs.git

push =
    vcsh emacs push
    vcsh emacs push github

